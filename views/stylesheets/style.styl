rupture.mobile-cutoff = 460px

html
  height: 100%

*
  box-sizing: border-box
  margin: 0

body
  background: rgb(55, 55, 55)
  min-height: 100%
  color: white
  font: 16px "Courgette", "Lucida Grande", Helvetica, Arial, sans-serif
  +mobile()
    font-size: 18px

a.new-quote-link
  color: col = #006eff
  z-index: 100
  text-decoration: none
  font-size: 1.4em
  border: 1px solid @color
  padding: 0.3em 0.5em
  border-radius: 6px
  display: inline-block
  &:hover
    color: white
    border-color: white
    background: rgba(col, 0.4)
  &:active
    border-color: col

div.header-center
  text-align: center

div.mid
  text-align: center
  padding: 0 20px
  margin-top: 2em

h1
  color: rgb(83, 83, 83)
  text-shadow: 1px 1px 2px rgb(43, 43, 43)

h1#quote-text
  font-size: 2.4em
  color: white
  margin: 0
